{
    "name": "@script-string/core",
    "version": "0.3.0",
    "description": "Engine for creating script tagged template strings",
    "keywords": [
        "script",
        "template strings",
        "typescript"
    ],
    "main": "lib/index.js",
    "types": "lib/index.d.js",
    "repository": "https://github.com/SpudNyk/script-string.git",
    "license": "MIT",
    "scripts": {
        "build:package": "node scripts/package-cli.js . dist",
        "build:types": "tsc --emitDeclarationOnly --outDir dist/lib",
        "build:babel:cjs": "cross-env BABEL_ENV=cjs babel src -d dist/lib --extensions \".ts\"",
        "build:babel": "yarn build:babel:cjs && yarn build:types && yarn build:package",
        "build:tsc:cjs": "tsc --declaration true --outDir dist/lib",
        "build": "yarn build:tsc:cjs && yarn build:package",
        "docs": "typedoc --out docs/api --readme none --name script-string --gitRevision master"
    },
    "dependencies": {
        "@types/node": "^13.7.0",
        "@types/tmp": "^0.1.0",
        "is-what": "^3.5.1",
        "merge-anything": "^2.4.4",
        "tmp-promise": "^2.0.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.3",
        "@babel/core": "^7.8.3",
        "@babel/plugin-transform-modules-commonjs": "^7.8.3",
        "@babel/plugin-transform-runtime": "^7.8.3",
        "@babel/preset-env": "^7.8.3",
        "@babel/preset-typescript": "^7.8.3",
        "cross-env": "^7.0.0",
        "eslint": "^6.8.0",
        "fs-jetpack": "^2.2.3",
        "typedoc": "^0.16.8",
        "typescript": "^3.7.5",
        "yargs": "^15.1.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=10.0.0"
    }
}
